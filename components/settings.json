{
  "app": {
    "title": "AI 문제 유형 분류기",
    "version": "1.0.0",
    "author": "AI 문제 유형 분류기",
    "description": "AI 문제 유형 분류기는 OCR 기술을 활용하여 문제 유형을 분류하는 프로그램입니다.",
    "license": "MIT",
    "repository": ""
  },
  "ai": {
    "model": "mistral-small:24b",
    "temperature": 0.2,
    "system_prompt": "문제 유형을 분류해주세요. [문제 예시 3개]"
  },
  "paths": {
    "output_dir": "./output",
    "image_dir": "./output/images"
  },
  "ocr": {
    "lang": "kor+eng",
    "tesseract_path": "C:/Program Files/Tesseract-OCR/tesseract.exe"
  },
  "gui": {
    "window_size": "800x600",
    "theme": "clam",
    "font": {
      "family": "맑은 고딕",
      "size": 12
    }
  }
}